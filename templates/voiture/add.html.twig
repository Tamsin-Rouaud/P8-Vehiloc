{% extends 'base.html.twig' %}

{% block body %}

<section id="add">
    <a href={{path('app_home')}}>← Retour</a>
    <h1>Ajouter une voiture</h1>
    {{ form_errors(form) }}
    {{ form_start(form) }}
        
        <div class="input">
        {{ form_row(form.nomVoiture, {label: 'Nom de la voiture'}) }}
        </div>
        <div class="input">
        {{ form_row(form.description, {label: 'Description'}) }}
</div>
        <div class="flex-input">
        <div class="input">
        {{ form_row(form.prixMensuel, {label: 'Prix mensuel'}) }}
        </div>
        <div class="input">
        {{ form_row(form.prixJournalier, {label: 'Prix journalier'}) }}
</div>
    </div>
    <div class="flex-input">
        <div class="input">
         {{ form_row(form.nombrePlaces, {label: 'Nombre de places'}) }}
 </div>
        <div class="input">
          {{ form_row(form.status, {label: 'Boîte de vitesse'}) }}
 </div>
     <div class="input">
        {{ form_row(form.nombreKm, {label: 'Nombre de km'}) }}
         </div>
    </div>
       

<button type="submit" class="btn-add">Ajouter</button>
        {{ form_end(form) }} 

</section>


{% endblock %}